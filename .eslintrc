{
  "extends": "airbnb",
  "globals": {
    "window": true,
    "jest": true
  },
  "rules" : {
    "react/prop-types": [2, { ignore: ['children'] }],
    "react/jsx-filename-extension": [1, { "extensions": [".js"] }],
    "jsx-a11y/anchor-is-valid": [ "error", {
        "components": [ "Link" ],
        "specialLink": [ "to" ]
      }]
    }
}
